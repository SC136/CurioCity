{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "nativewind-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
